<div class="container">
    <div class="row">
        <div class="col-md-12 text-center" id="upperPage">
            <h1>EAT. DA. BURGER.</h1>
        </div>
        <div class="col-md-6 text-center" class="task">
            <div class="row">
                {{#each burgers}}
                {{#unless this.devoured}}
                <div class="col-md-9 text-center">
                    <pre>{{this.id}} -- {{this.burger_name}}

                    </pre>
                </div>
                <div class="col-md-3 text-center">
                    <form action="/burgers/{{this.id}}?_method=PUT" method="POST" class="devour-form button-size">
                        <button type="submit" class="btn btn-default burgerUndevoured">DEVOUR DA BURGER!!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-md-6 text-center" class="task">
            {{#each burgers}}
            {{#if this.devoured}}
            <div class="devouredBurgers">
                <div>
                {{/if}}
                {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center enter_section">
            <form action="/burgers" method="POST">
                <input type="text" id="name" name="burger_name" placeholder="Imaginary Burger">
                <button type="submit" class="addBurgerButton">ADD DA BURGER</button>
            </form>
            <p>ENTER A BURGER YOU WANT TO DEVOUR AND CLICK THE "SUBMIT" BUTTON!</p>
        </div>
    </div>
</div>